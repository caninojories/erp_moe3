#DataTables_Table_0_filter {
  label {
    display: inline;
    input[type=search] {
      display: inline;
      height: 30px;
      padding: 6px 12px;
      font-size: 14px;
      line-height: 1.42857143;
      margin-left: 5px;
      color: #555;
      background-color: #fff;
      background-image: none;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
      transition: 0.5s ease-in-out all;
      &:focus{
        border-color: #66AFE9;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset, 0 0 8px rgba(102, 175, 233, 0.6);
        outline: 0 none;
      }
    }
  }
}

div#DataTables_Table_0_filter.dataTables_filter {
  margin-top: 10px;
  margin-bottom: 10px;
}

.dataTables_paginate paging_simple_numbers {
  margin-top: 50px;
}

#DataTables_Table_0_paginate {
  float: right;
  margin-top: 20px;
  margin-bottom: 20px;
  #DataTables_Table_0_previous {
    display: inline;
    padding: 10px;
    text-decoration: none;
  }
  .paginate_button  {
    display: inline;
    padding: 10px;
    border:1px solid #428bca;
    cursor: pointer;
    text-decoration: none;
  }
  .current {
    display: inline;
    padding: 10px;
    color: #fff;
    cursor: default;
    background-color: #428bca;
    border:1px solid #428bca;
    text-decoration: none;
  }
}

a#DataTables_Table_0_previous.paginate_button.previous.disabled {
  color: #777;
  border:1px solid #ddd;
  cursor: not-allowed;
}

a#DataTables_Table_0_next.paginate_button.next.disabled {
  color: #777;
  border:1px solid #ddd;
  cursor: not-allowed;
}

button.DTTT_button,
div.DTTT_button,
a.DTTT_button {
  position: relative;
  display: inline-block;
  margin-right: 3px;
  padding: 5px 8px;
  border: 1px solid #999;
  cursor: pointer;
  *cursor: hand;
  font-size: 14px;
  font-weight: 400;
  color: #fff !important;

  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  -ms-border-radius: 2px;
  -o-border-radius: 2px;
  border-radius: 2px;

  -webkit-box-shadow: 1px 1px 3px #ccc;
  -moz-box-shadow: 1px 1px 3px #ccc;
  -ms-box-shadow: 1px 1px 3px #ccc;
  -o-box-shadow: 1px 1px 3px #ccc;
  box-shadow: 1px 1px 3px #ccc;


  background: #ffffff;
  background: linear-gradient(top, #d9534f 0%,#d9534f 89%,#d9534f 100%);
  &:hover {
    background: linear-gradient(top, #d43f3a 0%,#d43f3a 89%,#d43f3a 100%);
  }
}
