@import 'importSheets/font_Face'

.invoiceRegistration {
  label {
    font-family: SFCartoonistHandSCRegular;
    font-size: 16px;
    color: rgb(95, 92, 92);
  }
  label.gothic {
    font-family: gothic;
    font-size: 22px;
    color: #428bca;
  }
  .header {
    font-family: gothic;
    font-size: 3em;
    color: #428bca;
  }
  button.gothic {
    font-family: SFCartoonistHandSCRegular;
    font-weight: 900;
    color: #428bca;
  }
  input {
    font-family: josefinslab-bold;
    font-size: 16px;
    font-weight: 900;
    color: #333;
  }
  textarea {
    font-family: josefinslab-bold;
    font-size: 16px;
    font-weight: 900;
    color: #333;
  }
  .addItem {
    margin-bottom: 10px;
  }
  .save {
    margin-bottom: 10px;
  }
  .delete {
    margin-left: 3px;
    margin-right: 3px;
  }

  .am-collapse {
    animation-duration: .3s !important;
    animation-timing-function: ease !important;
    animation-fill-mode: backwards !important;
    overflow: hidden !important;
  }

  .am-collapse {
    overflow: visible;
  }

  .panel-title > a {
    font-family: josefinslab-bold;
    color: #428bca;
    text-decoration: none;
    &:hover {
      text-decoration: none;
      cursor: pointer;
    }
  }
}
