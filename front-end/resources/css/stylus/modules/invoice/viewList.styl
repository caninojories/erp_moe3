.viewList {
  alert-invoice-pdf-download, alert-invoice-update-status {
    position: fixed;
    z-index: 999;
    top: 35%;
    left: 45%;
    margin-top: -50px;
    margin-left: -100px;
  }

  .body {
    margin-top: 40px;
    background-color: #ecf0f1;
  }

  .header-image {
    height: 300px;
    margin-top: 50px;
    background-image: url('/images/ensure-success.jpg');
    background-position: center center;
    background-size: cover;
    .product-header {
      h1 {
        color: #ecf0f1;
        font-weight: 300;
      }
      p {
        color: #bdc3c7
        font-weight: 100;
        font-size: 20px;
      }
    }
  }

  thead > tr > th:first-child {
    width: 240px;
  }
  .select2-container {
    min-width: 120px;
    max-width: 120px;
    margin-left: 4px;
  }
  .top-margin {
    position: relative;
    top: 8px;
  }
}
